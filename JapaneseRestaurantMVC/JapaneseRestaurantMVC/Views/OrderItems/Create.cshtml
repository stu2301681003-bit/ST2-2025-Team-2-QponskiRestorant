@model JapaneseRestaurant.Models.OrderItem

@{
    ViewData["Title"] = "Create Order Item";
}

<h1>Create Order Item</h1>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="OrderId"></label>
        <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId"></select>
    </div>

    <div class="form-group">
        <label asp-for="DishId"></label>
        <select asp-for="DishId" class="form-control" asp-items="ViewBag.DishId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>

<div>
    <a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
