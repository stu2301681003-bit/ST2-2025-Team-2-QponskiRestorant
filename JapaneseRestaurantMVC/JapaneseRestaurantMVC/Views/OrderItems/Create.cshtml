@model JapaneseRestaurant.Models.OrderItem

@{
    ViewData["Title"] = "Create Order Item";
}

<h1>Create Order Item</h1>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="OrderId"></label>
        <select asp-for="OrderId" class="form-control" asp-items="ViewBag.OrderId" readonly></select>
    </div>

    <div class="form-group">
        <label asp-for="DishId"></label>
        <select asp-for="DishId" class="form-control" asp-items="ViewBag.DishId"></select>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-controller="Orders" asp-action="Details" asp-route-id="@Model.OrderId" class="btn btn-secondary">Back to Order</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
