@model JapaneseRestaurant.Models.Order

<h1>Order #@Model.Id</h1>

<p>Customer: @Model.Customer.Name</p>
<p>Date: @Model.Date.ToString("yyyy-MM-dd")</p>
<p>Total: @Model.TotalPrice.ToString("C")</p>

<h3>Order Items</h3>
@if (Model.OrderItems != null && Model.OrderItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Dish</th>
                <th>Quantity</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.Dish.Name</td>
                    <td>@item.Quantity</td>
                    <td>@((item.Dish.Price* item.Quantity).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No items yet.</p>
}

<a asp-controller="OrderItems" asp-action="Create" asp-route-orderId="@Model.Id" class="btn btn-success">Add Order Item</a>
<a asp-controller="Orders" asp-action="Index" class="btn btn-secondary">Back to Orders</a>
